<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TradeLogTableStageController">
   <center>
      <TableView id="tradeLogTable" fx:id="tableView" prefHeight="403.0" prefWidth="683.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="41.0" text="ID" />
          <TableColumn fx:id="codeColumn" prefWidth="70.0" text="CODE" />
            <TableColumn fx:id="bookNameColumn" prefWidth="132.0" text="BOOK NAME" />
            <TableColumn fx:id="dateColumn" prefWidth="103.0" text="DATE" />
            <TableColumn fx:id="purchasePriceColumn" prefWidth="126.0" text="PURCHASE PRICE" />
            <TableColumn fx:id="purchaseNumColumn" prefWidth="50.0" text="NUM" />
            <TableColumn fx:id="sellingPriceColumn" prefWidth="101.0" text="SELLING PRICE" />
            <TableColumn fx:id="sellingNumColumn" minWidth="0.0" prefWidth="55.0" text="NUM" />
        </columns>
      </TableView>
   </center>
   <top>
      <MenuBar layoutX="-200.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Table">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#onReloadLogsClick" text="Reload Logs" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="View">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#onShowAddBookInfoWindowMenuClick" text="Show Add BookInfo Window" />
                <MenuItem mnemonicParsing="false" onAction="#onShowAddLogWindowMenuClick" text="Show AddLog Window" />
                  <MenuItem mnemonicParsing="false" onAction="#onShowBookInfoTableWindowMenuClick" text="Show Book Info Window" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
